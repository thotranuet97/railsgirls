

<div class="row">
  <div class="col-md-6">
    <%= image_tag(@idea.picture_url, class: "height_pic image") if @idea.picture.present? %>
  </div>

  <div class="col-md-6">
    <strong><%= link_to @user.email, @user, class: "green" %></strong>
    

    <p><b>Name: </b><%= @idea.name %></p>
    <p><b>Description: </b><%= @idea.description %></p>
    <p>
      <%= link_to 'Edit', edit_idea_path(@idea), class: "btn btn-warning" %> |
      <%= link_to 'Destroy', @idea, data: { confirm: 'Are you sure?' }, method: :delete, class: "btn btn-danger" %> |
      <%= link_to 'Back', ideas_path, class: "btn btn-info" %>
    </p>
  </div>
</div>
<h3>Comments</h3>
<% @comments.each do |comment| %>
  <div class="row">
  
      <div class="col-md-6">
          <div class="panel panel-success">
              <div class="panel-body">
                <strong><%= comment.user.email %></strong>
                <br />
                <p><%= comment.body %></p>
                <%= image_tag(comment.picture_url, class: "height_pic image") if comment.picture.present? %>
                <p><%= link_to 'Delete', comment_path(comment), method: :delete, data: { confirm: 'Are you sure?' } %></p>
              </div>
          </div>
      </div>
      <div class="col-md-6"></div> 
    
  </div>
<% end %>
<%= render partial: 'comments/form', locals: { comment: @comment } %>